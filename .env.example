# Google AI Studio Configuration
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your-google-ai-studio-api-key

# Optional: Google Cloud Project (only needed for Cloud Run deployment)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# WordPress Configuration
WORDPRESS_USERNAME=your-username
WORDPRESS_APP_PASSWORD=your-app-password

# Datadog Configuration
DD_API_KEY=your-datadog-api-key
DD_SITE=datadoghq.com
DD_ENV=development
DD_SERVICE=mynewsrobot
DD_VERSION=0.1.0

# Optional: Override default config paths
# BOOKMARK_CONFIG_PATH=gs://your-bucket/bookmarks/weekly_bookmarks.yaml
# NEWS_SOURCES_CONFIG=config/news_sources.yaml
# TOPIC_PRIORITIES_CONFIG=config/topic_priorities.yaml

# Development Settings
LOG_LEVEL=INFO
DEVELOPMENT_MODE=true
